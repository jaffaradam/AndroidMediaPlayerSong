<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="11.5dp"
    android:paddingTop="17.5dp"
    android:paddingRight="17.5dp"
    android:paddingBottom="21.5dp"
    android:background="#fff"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="#129793">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:background="#129793">

    <ImageView
        android:layout_width="16.5dp"
        android:layout_height = "wrap_content"
        android:src="@drawable/audio_design"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="13.5dp"/>

    <RelativeLayout
        android:layout_width="160.5dp"
        android:layout_height="match_parent"
        android:layout_marginRight="15dp">

        <TextView
            android:id="@+id/txtTimeStamp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:textSize="11sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="12:30"/>

        <SeekBar
            android:id="@+id/seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:thumb="@drawable/seekbar_thumb"
            android:theme="@style/SeekBarColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    </RelativeLayout>
    
    <ImageView
        android:id="@+id/btnOwnPlay"
        android:layout_width="34.5dp"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:src="@drawable/audio_play"
        android:layout_gravity="center_vertical"/>
    </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:background="#fff">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:background="#fff">

        <ImageView
            android:layout_width="16.5dp"
            android:layout_height = "wrap_content"
            android:src="@drawable/audio_design_user"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="13.5dp"/>

        <RelativeLayout
            android:layout_width="160.5dp"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp">

            <TextView
                android:id="@+id/txtTimeStamp1"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:textSize="11sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#202930"
                android:text="12:30"/>

            <SeekBar
                android:id="@+id/seekbar1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:thumb="@drawable/seekbar_user"
                android:theme="@style/SeekBarColor1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
        </RelativeLayout>

        <ImageView
            android:id="@+id/btnReplyPlay"
            android:layout_width="34.5dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:src="@drawable/audio_play_user"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>